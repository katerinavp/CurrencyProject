<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextSearch" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:background">@drawable/bg_search_edit_text</item>
        <item name="android:padding">@dimen/edit_text_padding</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Text.Large.Toolbar">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Text.Large.Bold">
        <item name="android:fontFamily">@string/font_family_medium</item>

    </style>

    <style name="Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@string/font_family_light</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

</resources>